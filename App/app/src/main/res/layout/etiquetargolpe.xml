<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_gradient"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <RelativeLayout
        android:id="@+id/EtiquetadoTitle"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_height="60dp"
        android:layout_width="match_parent"

        android:background="@android:color/transparent"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Etiquetado"
            android:gravity="center"
            android:orientation="horizontal"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="#FFD519"
            android:textSize="28sp"
            android:textStyle="bold" />
    </RelativeLayout>


    <Button
        android:id="@+id/Derecha"
        android:layout_width="117dp"
        android:layout_height="362dp"
        android:layout_marginLeft="304dp"
        android:layout_marginTop="64dp"
        android:background="@drawable/menu_button"
        android:gravity="center_horizontal|center_vertical"
        android:text="Derecha"
        android:textColor="#FFD519"
        android:textSize="22sp"
        app:layout_constraintRight_toRightOf= "parent"
        app:layout_constraintTop_toBottomOf="@+id/EtiquetadoTitle" />

    <Button
        android:id="@+id/Frontal"
        android:layout_width="117dp"
        android:layout_height="362dp"
        android:layout_marginLeft="304dp"
        android:layout_marginTop="64dp"
        android:background="@drawable/menu_button"
        android:gravity="center_horizontal|center_vertical"
        android:text="Frontal"
        android:textColor="#FFD519"
        android:textSize="22sp"
        android:layout_marginRight="30dp"
        app:layout_constraintRight_toLeftOf= "@+id/Derecha"
        app:layout_constraintTop_toBottomOf="@+id/EtiquetadoTitle" />

    <Button
        android:id="@+id/Izquierda"
        android:layout_width="117dp"
        android:layout_height="362dp"
        android:layout_marginLeft="304dp"
        android:layout_marginTop="64dp"
        android:background="@drawable/menu_button"
        android:gravity="center_horizontal|center_vertical"
        android:text="Izquierda"
        android:textColor="#FFD519"
        android:textSize="22sp"
        android:layout_marginRight="30dp"
        app:layout_constraintRight_toLeftOf= "@+id/Frontal"
        app:layout_constraintTop_toBottomOf="@+id/EtiquetadoTitle" />

    <ImageView
    android:id="@+id/leftImage"
    app:srcCompat="@drawable/left"
    android:layout_height="0dp"
    android:layout_width="0dp"
    app:layout_constraintWidth_percent="0.33"
    app:layout_constraintHeight_percent="0.3"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:id="@+id/frontalImage"
        android:layout_height="0dp"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.33"
        app:layout_constraintHeight_percent="0.3"
        app:srcCompat="@drawable/up"
        app:layout_constraintLeft_toRightOf="@id/leftImage"
        app:layout_constraintBottom_toBottomOf="parent" />

    <ImageView
        android:id="@+id/rightImage"
        app:srcCompat="@drawable/right"
        android:layout_height="0dp"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.33"
        app:layout_constraintHeight_percent="0.3"
        app:layout_constraintLeft_toRightOf="@id/frontalImage"
        app:layout_constraintBottom_toBottomOf="parent" />





</androidx.constraintlayout.widget.ConstraintLayout>




